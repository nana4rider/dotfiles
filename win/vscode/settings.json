{
  // 新しいファイルを開くとき、常に既存のウィンドウで開く
  "window.openFilesInNewWindow": "off",

  // 新規ワークスペースを別ウインドウで開く
  "window.openFoldersInNewWindow": "on",

  // 信頼されていないファイルを開く際の動作を「開く」に設定
  "security.workspace.trust.untrustedFiles": "open",

  // エクスプローラーで現在開いているファイルを自動でハイライト
  "explorer.autoReveal": true,

  // エディタで制御文字（非表示文字）をレンダリング
  "editor.renderControlCharacters": true,

  // サジェストリストの選択肢で最初の候補を選択
  "editor.suggestSelection": "first",

  // アイコンテーマを「material-icon-theme」に設定
  "workbench.iconTheme": "material-icon-theme",

  // 画像の貼り付け先を現在のファイルのディレクトリ内にある「images」フォルダに設定
  "pasteImage.path": "${currentFileDir}/images",

  // 差分エディタで空白の違いを無視
  "diffEditor.ignoreTrimWhitespace": false,

  // Gitの自動フェッチを有効化
  "git.autofetch": true,

  // Git同期時に確認を表示しない
  "git.confirmSync": false,

  // スマートコミットを有効化（未ステージングの変更をコミット可能に）
  "git.enableSmartCommit": true,

  // コマンドセンターを有効化（UIにコマンドセンターを表示）
  "window.commandCenter": true,

  // エディタのプレビュー機能を無効化（ファイルを開くたびに新しいタブを使用）
  "workbench.editor.enablePreview": false,

  // 統合ターミナルのプロファイル設定
  "terminal.integrated.profiles.windows": {
    "Git Bash": {
      "source": "Git Bash"
    },
    "Ubuntu (WSL)": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": ["-d", "Ubuntu"]
    }
  },

  // デフォルトの統合ターミナルプロファイルを PowerShell に設定
  "terminal.integrated.defaultProfile.windows": "Git Bash",

  // Gitのタグをプル時に置き換え
  "git.replaceTagsWhenPull": true,

  // カラーテーマを「Default Dark+」に設定
  "workbench.colorTheme": "Default Dark+",

  // スタートアップを表示しない
  "workbench.startupEditor": "none",

  "security.allowedUNCHosts": ["wsl.localhost", "hass.home"],
  "security.promptForLocalFileProtocolHandling": false,
  "remote.autoForwardPortsSource": "hybrid"
}
